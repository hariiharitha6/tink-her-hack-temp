<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================= MAIN CONTENT ================= -->
    <ScrollView
        android:background="#FFF1F7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ðŸŒ¸ DASHBOARD HEADER -->
            <TextView
                android:text="Maternal Care Dashboard ðŸ’—"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#C2185B"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Profile Card -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:padding="16dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Patient Profile"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#AD1457"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/nameText"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/areaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/mobileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/weightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Pregnancy Status Card -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:padding="16dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Pregnancy Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#AD1457"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/weekText"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/trimesterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/dueDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Health Tips Card -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:padding="16dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Health Tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#AD1457"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/tipsText"
                    android:layout_marginTop="6dp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:padding="16dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/healthBtn"
                    android:text="Health Tracking"
                    android:backgroundTint="#E91E63"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>

                <Button
                    android:id="@+id/babyBtn"
                    android:text="Baby Development"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>

                <Button
                    android:id="@+id/emergencyBtn"
                    android:text="Emergency"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>

                <Button
                    android:id="@+id/riskBtn"
                    android:text="Risk Card"
                    android:backgroundTint="#F57C00"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>

                <Button
                    android:id="@+id/alertBtn"
                    android:text="Alerts"
                    android:backgroundTint="#C2185B"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ================= SIDEBAR ================= -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="Quick Access"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="#C2185B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sidebarHealth"
            android:text="Health Records"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sidebarBaby"
            android:text="Baby Development"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sidebarLogout"
            android:text="Logout"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#D32F2F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>